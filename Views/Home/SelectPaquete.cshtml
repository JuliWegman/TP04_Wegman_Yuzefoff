@{
    ViewData["Title"] = "SelectPaquete";
}
@{if(OrtWorld.Existe){
<div class="aviso">
<h1>ESE DESTINO YA ESTÁ CUBIERTO, ELEGIR OTRO PARA PODER CONTINUAR</h1>
</div>
}
}
<form action='@Url.Action("GuardarPaquete")'>
    <div>
    <h2>Elige un destino</h2>
    
        <select name="destinoSeleccionado">
            @foreach (string item in ViewBag.destinos)
            {
               <option value="@item">@item</option> 
            }           
        </select>
    
    </div>

    <h2>Elegir uno de estos hoteles: </h2>
        <select name="HotelElegido">
            @for (int j = 0; j < ViewBag.hoteles.Count; j++)
            {
                <option value="@j">hotel @(j+1)</option>
            }
        </select>
    
        @{
        int i=1;
        foreach (string a in ViewBag.hoteles)
        {
            <div class="ñaña">
            <p>hotel @i :</p>
            
            <img src=~/img/@a height="5%" width="5%">
            @{i++;}
            </div>
        }
        }
    
     <h2>Elegir uno de estos Aereos: </h2>
        <select name="AereoElegido">
            @for (int j = 0; j < ViewBag.aereos.Count; j++)
            {
                <option value="@j">aereo @(j+1)</option>
            }
        </select>
    
        @{
        int ii=1;
        foreach (string a in ViewBag.aereos)
        {
            <div class="ñaña">
            <p>aereo @ii :</p>
            
            <img src=~/img/@a height="5%" width="5%">
            @{ii++;}
            </div>
        }
        }
    
    
        <h2>Elegir una de estas Excursiones: </h2>
        <select name="ExcursionElegido">
            @for (int j = 0; j < ViewBag.excursiones.Count; j++)
            {
                <option value="@j">excursion @(j+1)</option>
            }
        </select>
    
        @{
        int iii=1;
        foreach (string a in ViewBag.excursiones)
        {
            <div class="ñaña">
            <p>Excursion @iii :</p>
            
            <img src=~/img/@a height="5%" width="5%">
            @{iii++;}
            </div>
        }
        }
        
    <p><input class="link" type="submit" value="Subir paquete"></p>
    <br> <br>
</form>


